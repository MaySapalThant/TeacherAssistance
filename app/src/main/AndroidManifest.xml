<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.teacherassistance">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".MainDrawer"
            android:launchMode="singleTop" />
        <activity android:name=".About" />
        <activity android:name=".Setting"
            android:parentActivityName=".MainDrawer"/>
        <activity
            android:name=".Subject"
            android:parentActivityName=".MainDrawer" />
        <activity android:name=".GroupGenerate"
            android:parentActivityName=".Subject"/>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartAttendance"
            android:parentActivityName=".Subject"/>
        <activity android:name=".ViewRollcall"
            android:parentActivityName=".Subject"></activity>
        <activity android:name=".StudentInfo"
                    android:parentActivityName=".Subject"></activity>
    </application>

</manifest>